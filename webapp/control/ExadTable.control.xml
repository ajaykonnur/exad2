<core:FragmentDefinition  xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
	<t:Table columns="{/columnName}" rows="{/TableDetails}" selectionMode="MultiToggle" paste="onPaste" enableCellFilter="true" alternateRowColors="true">
		<t:columns>
			<t:Column></t:Column>
		</t:columns>
		<t:extension>
			<Toolbar class="sapMTBHeader-CTX">
				<Title text="{$this>title}"/>
				<Label text="({$this>count})" />
				<ComboBox selectedKey="default">
					<items>
						<core:Item key="default" text="Standard"/>
					</items>
				</ComboBox>
				<Button text="Funktion"/>
				<ToolbarSpacer/>
				<Button id="addBtn" tooltip="Neuen Datensatz anlegen" enabled="false" icon="sap-icon://add" press=".onAddRowPress" />
				<Button id="copyBtn" tooltip="Datensatz kopieren"  enabled="false" icon="sap-icon://copy" press=".onCopyRowPress"/>
				<Button id="deleteBtn" tooltip="Datensatz löschen" enabled="false" icon="sap-icon://delete" press=".onDeleteRowPress"/>
				<Button id="editBtn" tooltip="Edit Table" icon="sap-icon://unlocked" press=".onEditChange"/>
				<SearchField liveChange=".onSearch" placeholder="Filtern" width="15%" />
				<MenuButton icon="sap-icon://vertical-grip">
					<menu>
						<Menu>
							<MenuItem text="Sichtbar Spalten"  icon="sap-icon://add" press=".onAddRowPress" />
							<MenuItem text="Sortierung" icon="sap-icon://action-settings" press=".tabelleSettings" />
							<MenuItem text="Alle Filter zurücksetzen" icon="sap-icon://clear-filter" press=".clearAllSortings" />
							<MenuItem text="Export to CSV" icon="sap-icon://excel-attachment" press=".exportToCSV" />
							<MenuItem text="Layout Vorlagen" icon="sap-icon://grid"/>
						</Menu>
					</menu>
				</MenuButton>
			</Toolbar>
		</t:extension>
		<t:footer>
			<Toolbar id="footerToolbar">
				<ToolbarSpacer />
				<Label id="ChangeVisibleRowCount" text="{i18n>Table.VisibleRows}" />
				<Input id="inputChangeVisibleRowCount" type="Number" editable="true" placeholder="{i18n>Search.Rows}" value="" width="3rem" change="onChangeVisibleRowCount" />
			</Toolbar>
		</t:footer>
	</t:Table>
	
</core:FragmentDefinition>