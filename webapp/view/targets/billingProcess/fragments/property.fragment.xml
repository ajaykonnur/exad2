<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:uxap="sap.uxap">
	<uxap:ObjectPageLayout id="ObjectPageLayoutProperty" showAnchorBarPopover="false" isChildPage="true">
		<uxap:sections>
			<uxap:ObjectPageSection title="Abrechnungsinformationen">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<Panel id="PropertyView" width="100%">
							<t:Table id="dataTable" columns="{/columnData}" rows="{/tableDetails}" selectionMode="MultiToggle" visibleRowCount="7" paste="onPaste">
								<t:columns>
									<t:Column></t:Column>
								</t:columns>
								<t:extension>
									<Toolbar class="sapMTBHeader-CTX">
										<Title text="Abrechnungsinformationen (5)"/>
										<ComboBox selectedKey="default">
											<items>
												<core:Item key="default" text="Standard"/>
											</items>
										</ComboBox>
										<Button text="Funktion"/>
										<ToolbarSpacer/>
										<Label text="bearbeiten"/>
										<Switch id="billInfoTableEdit" change=".onTableEditButtonPress"/>
										<Button id="Neu" tooltip="Neu" icon="sap-icon://add" type="Accept" enabled="false" press=".onPressAddRow"/>
										<Button id="Kopieren" tooltip="Kopieren" icon="sap-icon://copy" enabled="false" press=".onPressCopyRow"/>
										<Button id="Loeschen" tooltip="Löschen" icon="sap-icon://delete" type="Reject" enabled="false" press=".onPressDeleteRow"/>
									</Toolbar>
								</t:extension>
							</t:Table>
						</Panel>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Abrechnungsstatus">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<Panel id="Abrechnungsstatus" width="100%">
							<t:Table id="dataTable2" columns="{/statusColumnData}" rows="{/statusTableDetails}" selectionMode="MultiToggle" visibleRowCount="3"
								paste="onPaste">
								<t:columns>
									<t:Column>
										<Label text="{columnName}"/>
										<t:template>
											<Text text="{/statusTableDetails/0/Status}" wrapping="false"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:extension>
									<Toolbar class="sapMTBHeader-CTX">
										<Title text="Abrechnungsstatus (3)"/>
										<ComboBox selectedKey="default">
											<items>
												<core:Item key="default" text="Standard"/>
											</items>
										</ComboBox>
										<Button text="Funktion"/>
										<ToolbarSpacer/>
										<Label text="bearbeiten"/>
										<Switch id="billStatTableEdit" change=".onTableEditButtonPress_"/>
										<Button id="Neu_" tooltip="Neu" icon="sap-icon://add" type="Accept" enabled="false"/>
										<Button id="Kopieren_" tooltip="Kopieren" icon="sap-icon://copy" enabled="false"/>
										<Button id="Loeschen_" tooltip="Löschen" icon="sap-icon://delete" type="Reject" enabled="false"/>
									</Toolbar>
								</t:extension>
							</t:Table>
						</Panel>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Kommentare">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<Panel id="Kommentare">
							<Toolbar class="sapMTBHeader-CTX">
								<Title text="Kommentare"/>
								<Button text="Hinzufügen"/>
							</Toolbar>
							<TextArea width="100%"/>
						</Panel>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
	</uxap:ObjectPageLayout>
</core:FragmentDefinition>