<?xml version="1.0" encoding="UTF-8"?>
<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table" xmlns:uxap="sap.uxap" controllerName="promos.exad.EXAD2.controller.targets.billingProcess" >
   <uxap:ObjectPageLayout id="ObjectPageLayout" height="900px" showAnchorBarPopover="false" >
      <uxap:sections>
         <uxap:ObjectPageSection title="Abrechnungsinformationen">
            <uxap:subSections>
               <uxap:ObjectPageSubSection>
               		<Panel id="PropertyView" width="100%">
                     <t:Table id="dataTable" columns="{/columnData}" rows="{/tableDetails}" selectionMode="MultiToggle" visibleRowCount="5" paste="onPaste">
                        <t:columns>
                           <t:Column>
                             
                           </t:Column>
                        </t:columns>
                        <t:extension>
                           <Toolbar class="sapMTBHeader-CTX">
                              <Title text="Abrechnungsinformationen (5)" />
                              <ComboBox selectedKey="default">
                                 <items>
                                    <core:Item key="default" text="Standard" />
                                 </items>
                              </ComboBox>
                              <Button text="Funktion" />
                              <ToolbarSpacer />
                              <Label text="bearbeiten" />
                              <Switch />
                              <Button tooltip="Neu" icon="sap-icon://add" type="Accept" />
                              <Button tooltip="Kopieren" icon="sap-icon://copy" />
                              <Button tooltip="Löschen" icon="sap-icon://delete" type="Reject" />
                           </Toolbar>
                        </t:extension>
                     </t:Table>
                  </Panel>
               </uxap:ObjectPageSubSection>
            </uxap:subSections>
       </uxap:ObjectPageSection>              
       <uxap:ObjectPageSection title="Abrechnungsstatus">
       		 <uxap:subSections>
               <uxap:ObjectPageSubSection>
                	 <Panel id="Abrechnungsstatus" width="100%">
                     <t:Table id="dataTable2" columns="{/statusColumnData}" rows="{/statusTableDetails}" selectionMode="MultiToggle" visibleRowCount="3" paste="onPaste">
                        <t:columns>
                           <t:Column>
                              <Label text="{columnName}" />
                              <t:template>
                                 <Text text="{/statusTableDetails/0/Status}" wrapping="false" />
                              </t:template>
                           </t:Column>
                        </t:columns>
                        <t:extension>
                           <Toolbar class="sapMTBHeader-CTX">
                              <Title text="Abrechnungsstatus (3)" />
                              <ComboBox selectedKey="default">
                                 <items>
                                    <core:Item key="default" text="Standard" />
                                 </items>
                              </ComboBox>
                              <Button text="Funktion" />
                              <ToolbarSpacer />
                              <Label text="bearbeiten" />
                              <Switch />
                              <Button tooltip="Neu" icon="sap-icon://add" type="Accept" />
                              <Button tooltip="Kopieren" icon="sap-icon://copy" />
                              <Button tooltip="Löschen" icon="sap-icon://delete" type="Reject" />
                           </Toolbar>
                        </t:extension>
                     </t:Table>
                  </Panel>
               </uxap:ObjectPageSubSection>
            </uxap:subSections>
        </uxap:ObjectPageSection>              
    	<uxap:ObjectPageSection title="Kommentare">
       		<uxap:subSections>
               <uxap:ObjectPageSubSection>
                  <Panel id="Kommentare">
                     <Toolbar class="sapMTBHeader-CTX">
                        <Title text="Kommentare" />
                        <Button text="Hinzufügen" />
                     </Toolbar>
                     <TextArea width="100%" />
                  </Panel>
               </uxap:ObjectPageSubSection>
            </uxap:subSections>
         </uxap:ObjectPageSection>
      </uxap:sections>
   </uxap:ObjectPageLayout>
</mvc:View>