<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <P13nDialog showReset="true" showResetEnabled="{path: '/ShowResetEnabled'}" ok="onOK" cancel="onCancel" 
                reset="onReset" class="sapMBarContainer sapMBarPH">
        <panels>
            <P13nColumnsPanel changeColumnsItems="onChangeColumnsItems"
                              items="{path: '/Items'}"
                              columnsItems="{path: '/ColumnsItems'}">
                <items>
                    <P13nItem columnKey="{columnKey}" text="{text}"/>
                </items>
                <columnsItems class="sapMLIB sapMLIB-CTX sapMLIBActionable sapMLIBFocusable sapMLIBSelected sapMLIBShowSeparator sapMLIBTypeActive sapMListTblRow sapMLIBHoverable">
                    <P13nColumnsItem columnKey="{columnKey}" index="{index}" visible="{visible}"/>
                </columnsItems>
            </P13nColumnsPanel>
        </panels>
    </P13nDialog>
</core:FragmentDefinition>