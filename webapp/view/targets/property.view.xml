<mvc:View controllerName="promos.exad.EXAD2.controller.targets.billingProcess" xmlns="sap.m" xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
	<Panel id="PropertyView" width="100%" height="100%">
		<t:Table id="dataTable" columns="{/columnData}" rows="{/tableDetails}" selectionMode="MultiToggle" visibleRowCount="5" paste="onPaste">
			<t:columns>
				<t:Column>
					<Label text="{columnName}"/>
					<t:template>
						<Text text="{/tableDetails}" wrapping="false"/>
					</t:template>
				</t:Column>
			</t:columns>
			<t:extension>
				<Toolbar class="sapMTBHeader-CTX">
					<Title text="Abrechnungsinformationen (5)"/>
					<ComboBox selectedKey="default">
						<items>
							<core:Item key="default" text="Standard"/>
						</items>
					</ComboBox>
					<Button text="Funktion"/>
					<ToolbarSpacer/>
					<Label text="bearbeiten"/>
					<Switch/>
					<Button tooltip="Neu" icon="sap-icon://add" type="Accept"/>
					<Button tooltip="Kopieren" icon="sap-icon://copy"/>
					<Button tooltip="Löschen" icon="sap-icon://delete" type="Reject"/>
				</Toolbar>
			</t:extension>
		</t:Table>
	</Panel>
	
		<Panel id="Abrechnungsstatus" width="100%" height="100%">
		<t:Table id="dataTable2" columns="{/statusColumnData}" rows="{/statusTableDetails}" selectionMode="MultiToggle" visibleRowCount="5" paste="onPaste">
			<t:columns>
				<t:Column>
					<Label text="{columnName}"/>
					<t:template>
						<Text text="{/statusTableDetails}" wrapping="false"/>
					</t:template>
				</t:Column>
			</t:columns>
			<t:extension>
				<Toolbar class="sapMTBHeader-CTX">
					<Title text="Abrechnungsstatus (3)"/>
					<ComboBox selectedKey="default">
						<items>
							<core:Item key="default" text="Standard"/>
						</items>
					</ComboBox>
					<Button text="Funktion"/>
					<ToolbarSpacer/>
					<Label text="bearbeiten"/>
					<Switch/>
					<Button tooltip="Neu" icon="sap-icon://add" type="Accept"/>
					<Button tooltip="Kopieren" icon="sap-icon://copy"/>
					<Button tooltip="Löschen" icon="sap-icon://delete" type="Reject"/>
				</Toolbar>
			</t:extension>
		</t:Table>
	</Panel>
	<Panel id="Kommentare" width="100%" height="100%">
			<Toolbar class="sapMTBHeader-CTX">
				<Title text="Kommentare"/>
				<Button text="Hinzufügen"/>
			</Toolbar>
			<TextArea  width="100%" height="100%" />
	</Panel>
	
	
	
	
</mvc:View>