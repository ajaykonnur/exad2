<mvc:View controllerName="promos.exad.EXAD2.controller.targets.billingProcess" xmlns="sap.m" xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc" xmlns:uxap="sap.uxap" xmlns:tnt="sap.tnt" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Page id="pageBillingProcess" enableScrolling="false">
		<customHeader>
			<Toolbar class="sapMTBHeader-CTX">
				<Input id="KundeSearch" type="Text" placeholder="Kunde" width="20%"/>
				<Input id="LiegenschaftSearch" type="Tel" placeholder="Liegenschaft" width="20%"/>
				<DateRangeSelection id="DateRangeSearch" change="onDateRangeSearchChange" width="20%"/>
				<Button text="Auswahl laden" type="Emphasized" press="onPress"/>
			</Toolbar>
		</customHeader>
		<content>
			<IconTabBar bindingContexts="" id="iconTabBar" enableTabReordering="false" headerBackgroundDesign="Translucent" expandable="false"
				stretchContentHeight="true" backgroundDesign="Transparent" applyContentPadding="false">
				<items>
					<IconTabFilter text="Liegenschaft">
						<core:Fragment fragmentName="promos.exad.EXAD2.view.targets.billingProcess.fragments.property" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="Mietstruktur">
						<core:Fragment fragmentName="promos.exad.EXAD2.view.targets.billingProcess.fragments.tenantStructure" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="Versorgungsstruktur">
						<core:Fragment fragmentName="promos.exad.EXAD2.view.targets.billingProcess.fragments.supplyStructure" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="Kosten und Brennstoffe">
						<core:Fragment fragmentName="promos.exad.EXAD2.view.targets.billingProcess.fragments.costsAndFuels" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="Abrechnung">
						<core:Fragment fragmentName="promos.exad.EXAD2.view.targets.billingProcess.fragments.acounting" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="Ergebnisse">
						<core:Fragment fragmentName="promos.exad.EXAD2.view.targets.billingProcess.fragments.results" type="XML"/>
					</IconTabFilter>
					<IconTabFilter text="Archiv">
						<core:Fragment fragmentName="promos.exad.EXAD2.view.targets.billingProcess.fragments.archive" type="XML"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
	</Page>
</mvc:View>