<mvc:View controllerName="promos.exad.EXAD2.controller.main" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" height="100%"
	xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<tnt:ToolPage id="idToolPage" class="sapUiSizeCompact">
		<tnt:header>
			<core:Fragment fragmentName="promos.exad.EXAD2.view.main_shellbar" type="XML"/>
		</tnt:header>
		<tnt:sideContent>
			<core:Fragment fragmentName="promos.exad.EXAD2.view.main_functionsbar" type="XML"/>
		</tnt:sideContent>
		<tnt:mainContents>
			<l:Splitter >
				<Shell id="shellContainer" appWidthLimited="false">
					<App id="appContainer"></App>
				</Shell>
				<mvc:XMLView viewName="promos.exad.EXAD2.view.main_sidebar" id="idSideBarArea">
					<mvc:layoutData>
						<l:SplitterLayoutData minSize="200" size="20%" resizable="true"/>
					</mvc:layoutData>
				</mvc:XMLView>
			</l:Splitter>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>