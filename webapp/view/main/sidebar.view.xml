<mvc:View controllerName="promos.exad.EXAD2.controller.main.sidebar" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt"
	 xmlns:l="sap.ui.layout" 
	 xmlns:core="sap.ui.core" 
	 xmlns:f="sap.f" 
	 xmlns:card="sap.f.cards"
	 xmlns:cust="promos.exad.EXAD2.control">
	<VBox id="idSidebarContentNotExpanded" visible="false">
		<Button id="idSidebarButtonSearch" icon="sap-icon://search" type="Back"  press=".onSidebarButtonPress"></Button>
		<Button id="idSidebarButtonHints" icon="sap-icon://lightbulb" type="Back"  press=".onSidebarButtonPress"></Button>
		<Button id="idSidebarButtonNotes" icon="sap-icon://notes" type="Back" press=".onSidebarButtonPress"></Button>
		<!--<cust:customButton id="idSidebarButtonNotes_" icon="sap-icon://lightbulb" value="100" color="green">-->
		<!--</cust:customButton>-->
		<!--<Panel class="BadgePanel" >-->
		<!--	<core:Icon size="1em" class="BadgeIcon" src="sap-icon://lightbulb" />-->
		<!--	<Label class="BadgeBTN" text="5"></Label>-->
		<!--</Panel>-->
	</VBox>
	<VBox id="idSidebarContentExpanded">
		<Panel id="idPanelSearch" width="100%" expandable="true">
			<headerToolbar>
				<Toolbar height="3rem">
					<SearchField/>
				</Toolbar>
			</headerToolbar>
			<content>
				<ScrollContainer vertical="true">
					<Tree id="Tree" items="{path: 'mockdata>/treeListItems'}" mode="SingleSelectMaster" includeItemInSelection="true">
						<StandardTreeItem title="{mockdata>text}"/>
					</Tree>
				</ScrollContainer>
			</content>
		</Panel>
		<Panel id="idPanelHints" width="100%" expandable="true">
			<headerToolbar>
				<Toolbar>
					<core:Icon src="sap-icon://lightbulb"/>
					<Text text="{i18n>hints}"/>
				</Toolbar>
			</headerToolbar>
			<content>
				<ScrollContainer id="hintsContainer" vertical="true" content="{ path: '/', factory: '.factory.createHintItem'}">
					<f:Card>
						<f:header>
							<card:Header title="{bezeichnung}"></card:Header>
						</f:header>
						<f:content>
							<Text
								text="{nummer}"/>
						</f:content>
					</f:Card>
				</ScrollContainer>
			</content>
		</Panel>
		<Panel id="idPanelNotes" width="100%" expandable="true">
			<headerToolbar>
				<Toolbar>
					<core:Icon src="sap-icon://notes"/>
					<Text text="{i18n>notes}"/>
				</Toolbar>
			</headerToolbar>
			<content>
				<HBox>
				<Input id="noteInput" placeholder="{i18n>addNote}"></Input>
				<Button id="noteAddBtn" tooltip="{i18n>Btn.add.tooltip}" icon="sap-icon://add" press=".onAddNotePress" />
				</HBox>
				<List id="notizList" items="{/}" >
					<items>
						<ObjectListItem 
							title="{nummer}">
							<attributes>
								<ObjectAttribute id="maske" text="{maske}" />
								<ObjectAttribute id="bezeichnung_" text="{notiz}" />
								<!--<core:Icon src="sap-icon://history"/>-->
								<ObjectAttribute id="gueltigVon" text="{creationDateTime} - {creationUser}" />
								<!--<core:Icon src="sap-icon://person-placeholder"/>-->
								<!--<ObjectAttribute id="creationUser" text="{creationUser}" />-->
							</attributes>
						</ObjectListItem>
					</items>
				
				</List>
				<!--<VBox id="notizList" items="{/}" >-->
					
				<!--	<Title text="{nummer}" wrapping="true" class="sapUiTinyMarginEnd sapUiTinyMarginTop" />-->
				<!--	<Text  text="{bezeichnung}"/>-->
