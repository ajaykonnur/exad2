				<!--		<core:Icon src="sap-icon://history"/>-->
				<!--		<Text  text="{gueltigVon}"/>-->
				<!--		<ToolbarSpacer/>-->
				<!--		<core:Icon src="sap-icon://person-placeholder"/>-->
				<!--		<Text  text="{creationUser}"/>-->
				<!--	</HBox>-->
				<!--</VBox>-->
				<!--<ScrollContainer vertical="true">-->
				<!--	<FeedInput showIcon="false"/>-->
				<!--	<List id="notizList" items="{/}">-->
						<!--<FeedListItem text="{text}" sender="{author}" timestamp="{date}" showIcon="false"/>	-->
				<!--		<FeedListItem text="{nummer}" sender="{bezeichnung}" timestamp="{gueltigVon}" showIcon="false"/>-->
				<!--	</List>-->
				<!--</ScrollContainer>-->
			</content>
		</Panel>
	</VBox>
</mvc:View>